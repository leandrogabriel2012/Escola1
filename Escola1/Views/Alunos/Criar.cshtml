@model AlunoViewModel

@{
    ViewData["Title"] = "Alunos";
}

<h1> Criar Aluno</h1>
<form asp-action="Criar" method="post">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Identidade" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Identidade" class="form-control" />
                <span asp-validation-for="Identidade" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Nascimento" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nascimento" class="form-control" />
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TurmaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TurmaId" class="form-control" asp-items="@ViewBag.TurmaId">
                    <option selected="true" value="">Selecionar</option>
                </select>
            </div>
        </div>

        <div class="form-group" style="padding-top: 10px">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retornar</a>
            </div>
        </div>
        @if (ViewBag.Erro != null)
        {
            <div>
                <h4 class="text-danger">@ViewBag.Erro</h4>
            </div>
        }

    </div>
</form>