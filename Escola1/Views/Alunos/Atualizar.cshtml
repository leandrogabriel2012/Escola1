@model AlunoViewModel

@{
    ViewData["Title"] = "Alunos";
}

<h1>Atualizar Aluno</h1>
<hr />
<form asp-action="Atualizar" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AlunoId" />
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Identidade" class="control-label"></label>
        <input asp-for="Identidade" class="form-control" />
        <span asp-validation-for="Identidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nascimento" class="control-label"></label>
        <input asp-for="Nascimento" class="form-control" />
        <span asp-validation-for="Nascimento" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TurmaId" class="control-label"></label>
        <select asp-for="TurmaId" class="form-control" asp-items="@ViewBag.TurmaId">
            <option selected="true" value="">Selecionar</option>
        </select>
        <span asp-validation-for="TurmaId" class="text-danger"></span>
    </div>

    <div class="form-group" style="padding-top: 10px">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Retornar</a>
    </div>
    @if (ViewBag.Erro != null)
    {
        <h4 class="text-danger">@ViewBag.Erro</h4>
    }
</form>