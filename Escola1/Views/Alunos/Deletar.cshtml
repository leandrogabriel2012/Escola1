@model AlunoViewModel

@{
    ViewData["Title"] = "Alunos";
}

<h1>Deletar Aluno</h1>
<h3>Confirmar a exclusão desta Aluno?</h3>
<hr />
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.AlunoId)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.AlunoId)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Nome)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.Nome)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Identidade)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.Identidade)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Nascimento)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.Nascimento)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.TurmaId)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.TurmaId)
        </dl>
    </dl>

    <form asp-action="DeletarAluno">
        <input type="hidden" asp-for="AlunoId" />
        <div class="form-group" style="padding-top: 10px">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Retornar</a>
        </div>
    </form>
</div>