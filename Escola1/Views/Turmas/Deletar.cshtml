@model TurmaViewModel

@{
    ViewData["Title"] = "Salas";
}

<h1>Deletar Turma</h1>
<h3>Confirmar a exclusão desta Turma?</h3>
<hr />
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.TurmaId)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.TurmaId)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.Nome)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.Nome)
        </dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(Model => Model.SalaId)
        </dt>
        <dl class="col-sm-10">
            @Html.DisplayFor(Model => Model.SalaId)
        </dl>
    </dl>

    <form asp-action="DeletarTurma">
        <input type="hidden" asp-for="TurmaId" />
        <div class="form-group" style="padding-top: 10px">
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Retornar</a>
        </div>
    </form>
</div>